{
  "cli": {
    "version": ">= 16.18.0",
    "appVersionSource": "remote"
  },
  "build": {
    "development": {
      "developmentClient": true,
      "distribution": "internal",
      "android": {
        "buildType": "apk"
      }
    },
    "preview": {
      "distribution": "internal",
      "android": {
        "buildType": "apk"
      }
    },
    "production": {
      "autoIncrement": true,
      "android": {
        "buildType": "apk" // 生产环境使用 AAB 格式
      }
    },
    "my-profile": {
      "extends": "production", // 继承生产环境配置
      "android": {
        "buildType": "apk" // 自定义配置使用 APK
      }
    }
  }
}